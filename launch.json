{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python デバッガー: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "api.wsgi:api",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debugger",
                "--reload",
                "--host=0.0.0.0"
            ],
            "jinja": true
        }
    ]
}